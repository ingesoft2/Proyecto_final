<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Log">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/Blogin"
        android:layout_marginBottom="204dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/Tcontraseña"
        android:layout_toStartOf="@+id/Tcontraseña" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Usuario"
        android:id="@+id/Lusuario"
        android:layout_marginBottom="108dp"
        android:layout_above="@+id/Blogin"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="35dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Contraseña"
        android:id="@+id/Lcontraseña"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/Tusuario"
        android:layout_alignRight="@+id/Lusuario"
        android:layout_alignEnd="@+id/Lusuario" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Tusuario"
        android:layout_alignBottom="@+id/Lusuario"
        android:layout_alignRight="@+id/Tcontraseña"
        android:layout_alignEnd="@+id/Tcontraseña"
        android:layout_alignLeft="@+id/Tcontraseña"
        android:layout_alignStart="@+id/Tcontraseña" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/Tcontraseña"
        android:layout_alignBottom="@+id/Lcontraseña"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registrarse"
        android:id="@+id/Bregistrarse"
        android:layout_alignTop="@+id/Blogin"
        android:layout_alignRight="@+id/Tcontraseña"
        android:layout_alignEnd="@+id/Tcontraseña"
        android:layout_marginRight="41dp"
        android:layout_marginEnd="41dp" />
</RelativeLayout>
